function isPrime(n) {
  if (n <= 1) return false;
  if (n === 2) return true;
  if (n % 2 === 0) return false;

  for (let i = 3; i * i <= n; i += 2) {
    if (n % i === 0) return false;
  }
  return true;
}

// Examples
console.log(isPrime(2));   // true
console.log(isPrime(15));  // false
console.log(isPrime(17));  // true
